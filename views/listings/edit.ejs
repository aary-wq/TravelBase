<% layout('/layouts/boiler.ejs') %>
<body style="background: #f8f9fa;">
<div class="edit-container">
    <h2 class="edit-title">Edit Listing</h2>

    <form action="/listings/<%= listing._id %>?_method=PUT" method="post"
          class="needs-validation" enctype="multipart/form-data" novalidate>

        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input required type="text" name="listings[title]" value="<%= listing.title%>"
                   placeholder="Enter title" class="form-control">
            <div class="invalid-feedback">Please enter a catchy title</div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listings[description]" class="form-control" 
                      placeholder="Detailed Description..." required><%= listing.description%></textarea>
            <div class="invalid-feedback">Please enter a short description</div>
        </div>

        <div class="mb-3 text-center">
            <p class="mb-1 fw-semibold">Previously Uploaded Image</p>
            <img src="<%= originalImg %>" height="200" width="230" class="edit-img-preview" alt="Preview Not Available">
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload New Image</label>
            <input type="file" name="listings[image]" class="form-control">
        </div>

        <div class="row">
            <div class="mb-3 col-md-3">
                <label for="price" class="form-label">Price</label>
                <input type="number" name="listings[price]" value="<%= listing.price %>" placeholder="2100000" 
                       class="form-control" required>
                <div class="invalid-feedback">Please enter a valid price</div>
            </div>
            <div class="mb-3 col-md-9">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="listings[location]" value="<%= listing.location%>" 
                       placeholder="Pune, Maharashtra" class="form-control" required>
                <div class="invalid-feedback">Please enter address</div>
            </div>
        </div>

        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listings[country]" value="<%= listing.country %>" 
                   placeholder="India" class="form-control" required>
            <div class="invalid-feedback">Please enter a country name</div>
        </div>

        <div class="text-center mt-4">
            <button class="btn btn-danger">Edit Listing</button>
        </div>
    </form>
</div>
</body>



