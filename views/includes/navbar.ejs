<style>

.navbar
{
    background-color: whitesmoke;
    height: 4rem;
    /* border-bottom: none !important; */
}
.nav-item{
    font-size: 1.3rem;
}
.nav-item a{
    color: black;
}
.fa-compass:hover{
    color: maroon;
}

  /* Logo */
  .navbar-brand {
    font-size: 1.5rem;
    font-weight: 700;
    color: #ff4b5c !important;
    transition: transform 0.3s ease;
  }
  .navbar-brand:hover {
    transform: scale(1.1);
    color: #ff2e43 !important;
  }

  /* Navigation Links */
  .navbar .nav-link {
    color: #333 !important;
    font-weight: 500;
    padding: 0.6rem 1rem;
    position: relative;
    transition: color 0.3s ease;
  }
  .navbar .nav-link::after {
    content: "";
    position: absolute;
    width: 0%;
    height: 2px;
    background: #ff4b5c;
    left: 50%;
    bottom: 0;
    transition: all 0.3s ease-in-out;
  }
  .navbar .nav-link:hover::after {
    width: 100%;
    left: 0;
  }
  .navbar .nav-link:hover {
    color: #ff4b5c !important;
  }

  /* Search Bar */
  .search {
    border-radius: 2rem;
    padding: 10px;
    width: 16rem;
  }
  .search-btn {
    border-radius: 1.5rem;
  }
  .search-btn i {
    margin-right: 0.5rem;
  }


  /* Mobile Toggle */
  .navbar-toggler {
    border: none;
    outline: none;
  }
  .navbar-toggler:focus {
    box-shadow: none;
  }
/* Collapsed navbar styling */
@media (max-width: 767.98px) {
  .navbar-collapse {
    background-color: white;
    padding: 1rem;
    border-radius: 0.25rem;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }

  .navbar-nav .nav-link {
    display: block;
    padding: 0.75rem;
    border-radius: 0.25rem;
    text-align: center;
    background-color: #f8f9fa;
  }
  .navbar-nav .nav-link:hover {
    background-color: #ffe5e8;
  }

  /* Search form styling in collapse */
  .navbar-collapse form {
    margin: auto;
    margin-top: 0.75rem;
    margin-bottom: 0.75rem;
    align-items: center; 
    flex-direction: column;
  }
  .navbar-collapse .search {
    width: 35vw;
    margin-bottom: 0.5rem;
  }
  .navbar-collapse .search-btn {
    width: 35vw;
    margin: auto;
  }

  /* Auth links spacing */
  .navbar-collapse .ms-auto {
    margin-top: 0.75rem;
  }
}
</style>

<nav class="navbar navbar-expand-md sticky-top border-bottom mb-2 bg-white">
  <div class="container-fluid align-items-center">

    <!-- Brand -->
    <a class="navbar-brand d-flex align-items-center mx-auto mx-md-0" href="/listings">
      <i class="fa-solid fa-compass me-2"></i>
      <span class="fw-bold text-danger">TravelBase</span>
  </a>

    <!-- Mobile Toggle -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar Content -->
    <div class="collapse navbar-collapse justify-content-between" id="navbarNav">

      <!-- Left Menu -->
      <ul class="navbar-nav flex-shrink-0 ms-4">
        <li class="nav-item"><a class="nav-link" href="/listings">Home</a></li>
        <li class="nav-item"><a class="nav-link" href="/listings/new">Add Listing</a></li>
        <li class="nav-item"><a class="nav-link" href="/listings/myListings">My Listings</a></li>
      </ul>

      <!-- Center Search (Shrinks naturally before collapse) -->
      <form class="d-flex flex-shrink-1 mx-2" role="search" action="/listings/destination" method="get">
        <input class="form-control form-control-sm me-2 search w-auto" type="search"
          placeholder="Search destination" name="searchInp" />
        <button class="btn btn-danger btn-sm search-btn">
          <i class="fa-solid fa-magnifying-glass me-1"></i>Search
        </button>
      </form>

      <!-- Right Auth Links -->
      <ul class="navbar-nav flex-shrink-0">
        <% if(!currUser) { %>
          <li class="nav-item"><a class="nav-link fw-bold" href="/users/signup">Sign Up</a></li>
          <li class="nav-item"><a class="nav-link fw-bold" href="/users/login">Login</a></li>
        <% } else { %>
          <li class="nav-item"><a class="nav-link fw-bold" href="/users/logout">Logout</a></li>
        <% } %>
      </ul>

    </div>
  </div>
</nav>

